[client]
default-character-set = utf8mb4
#socket = /var/run/mysqld/mysqld.sock

[mysqld]
#socket = /var/run/mysqld/mysqld.sock
#pid-file = /usr/mysql/mysqld.pid

## --- 基础与时区设置 ---
default-time-zone = '+08:00'
# 服务器标识，用于主从复制
server-id = 1

## --- 二进制日志 (Binlog) ---
log-bin = mysql-bin
# 30天过期 (2592000秒)
binlog_expire_logs_seconds = 2592000
max_binlog_size = 100M
# binlog_format = ROW   # 8.4 默认，未来版本会移除该参数
# 指定需要记录 binlog 的数据库
binlog-do-db = bin_log_test
# 8.4 默认 sync_binlog=1，此处改为 0 以追求极限性能（掉电有风险）
sync_binlog = 0

## --- 连接与并发控制 ---
max_connections = 2000
max_connect_errors = 6000
wait_timeout = 86400
interactive_timeout = 86400
max_allowed_packet = 64M
table_open_cache = 4096
thread_cache_size = 100

# 数据存储目录
#datadir = /opt/mysql/data

## --- 字符集与 SQL 模式 ---
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci
# SQL模式设置，去除 'ONLY_FULL_GROUP_BY'
sql_mode = 'STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION'

## --- InnoDB 存储引擎优化 ---
innodb_buffer_pool_size = 1G
# innodb_log_file_size = 256M
innodb_redo_log_capacity = 256M
# 事务提交设置：0 或 2 可极大提升写入性能，1 最安全
innodb_flush_log_at_trx_commit = 0
innodb_flush_method = O_DIRECT
innodb_lock_wait_timeout = 1800
transaction_isolation = READ-COMMITTED
innodb_file_per_table = 1

## --- 临时表与内存限制 ---
tmp_table_size = 256M
max_heap_table_size = 256M
group_concat_max_len = 1024000

## --- 安全设置 ---
# 完全禁止使用 LOAD DATA INFILE 和 SELECT ... INTO OUTFILE 语句进行文件操作
secure-file-priv = NULL
# 8.4 默认禁用符号链接，无需显式设置 symbolic-links=0

# 禁用 DNS 反向解析以加快连接速度
skip-name-resolve

# 使用容器部署可忽略
